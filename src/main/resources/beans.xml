<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="defaultOnCreate" default-destroy-method="defaultOnDestroy">


	<bean id="person" class="com.spring.io.Person" init-method="onCreate"
		destroy-method="onDestroy">
		<constructor-arg value="777" name="id"></constructor-arg>
		<constructor-arg value="Mary" name="name"></constructor-arg>
		<property name="textId" value="123"></property>
		<property name="address" ref="address"></property>
	</bean>
	<bean id="address" class="com.spring.io.Address">
		<constructor-arg name="street" value="hinjewadi"></constructor-arg>
		<constructor-arg name="postcode" value="411057"></constructor-arg>
	</bean>
</beans>
